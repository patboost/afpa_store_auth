{% extends 'base.html.twig' %}

{% block title %}Mini Shop : Panier{% endblock %}

{% block body %}
<h1 class="text-center">Votre panier</h1>
{% if items | length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.product.price }}</td>
                    <td>{{ item.qty }}</td>
                    <td>{{ item.product.price * item.qty }}</td>
                    <td>
                        <a href="{{ path('delete_cart', {'id': item.product.id})}}" class="btn btn-danger btn-sm">
                           <i class="fa fa-trash"></i> 
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td>{{ total }}</td>
                <td></td>
            </tr>
        </tfoot>
    </table>
{% else %}
    <h2> Votre panier est actuellement vide</h2>
{% endif %}
{% endblock %}
